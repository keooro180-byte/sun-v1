const fetch = require('node-fetch');

exports.handler = async (event) => {
    // إعدادات CORS للسماح بالاتصال من موقعك
    const headers = {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Content-Type",
        "Access-Control-Allow-Methods": "POST, OPTIONS"
    };

    // معالجة طلبات التفتيش (Preflight)
    if (event.httpMethod === "OPTIONS") {
        return { statusCode: 200, headers };
    }

    try {
        // 1. استلام الرسالة والتأكد من وجودها (تطابق مع كود sendMessage الخاص بك)
        const body = JSON.parse(event.body);
        const userMessage = body.message;

        if (!userMessage) {
            throw new Error("لم يتم استلام أي رسالة في الطلب");
        }

        // 2. التحقق من وجود مفتاح الـ API
        const apiKey = process.env.GEMINI_API_KEY;
        if (!apiKey) {
            throw new Error("مفتاح GEMINI_API_KEY غير موجود في إعدادات Netlify");
        }

        // 3. الاتصال بنواة Gemini
        const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=${apiKey}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                contents: [{ parts: [{ text: userMessage }] }]
            })
        });

        const data = await response.json();

        // 4. معالجة الرد وإرساله للواجهة
        if (data.candidates && data.candidates[0].content) {
            const sunReply = data.candidates[0].content.parts[0].text;
            
            return {
                statusCode: 200,
                headers,
                body: JSON.stringify({ reply: sunReply })
            };
        } else {
            throw new Error(data.error?.message || "فشل النظام في توليد رد");
        }

    } catch (error) {
        console.error("System Error:", error.message);
        return {
            statusCode: 500,
            headers,
            body: JSON.stringify({ error: error.message })
        };
    }
};
